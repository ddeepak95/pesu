# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Pipecat Configuration
# Set to 'true' to use Pipecat Cloud, 'false' for local development
PIPECAT_USE_CLOUD=false

# For LOCAL development: Your local Pipecat server endpoint
PIPECAT_LOCAL_ENDPOINT=http://localhost:7860

# For CLOUD deployment: Your agent name on Pipecat Cloud
AGENT_NAME=pesu-pipecat

# API key for Pipecat Cloud (SERVER-SIDE ONLY - no NEXT_PUBLIC prefix!)
# Only required when PIPECAT_USE_CLOUD=true
PIPECAT_API_KEY=your_pipecat_api_key

# Firebase Admin Configuration (SERVER-SIDE ONLY - no NEXT_PUBLIC prefix!)
# Firebase Storage is used for storing voice recording audio files
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
# Option 1: Service account key as JSON string (recommended for serverless environments)
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}
# Option 2: Path to service account JSON file (alternative, if file-based auth is preferred)
# FIREBASE_SERVICE_ACCOUNT_PATH=./path/to/service-account-key.json

